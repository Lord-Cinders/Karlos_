CONTROLLERFLAG = [bool]    # starts with controller mode if true
NETWORKFLAG    = [bool]    # turns on networking if true     
CAMERAFLAG     = [bool]    # turns on camera if networking is also true
MQTTSERVER     = ["str"]   # sets the server ip. should be used with NETWORKFLAG
